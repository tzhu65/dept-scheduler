#!/bin/bash

/usr/libexec/s2i/assemble

rc=$?

if [ $rc -eq 0 ]; then
    echo "Bundling the client"
    cd scheduler/client
    echo "cd'ed"
    apt-get install nodejs
    echo "installed node.js"
    apt-get install npm
    echo "installed npm"
    npm install
    echo "npm installed"
else
    echo "Failed assembling so not bundling the client"
fi

exit $rc